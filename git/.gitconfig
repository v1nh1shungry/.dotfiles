[core]
  editor = nvim
  pager = delta

[delta]
  line-numbers = true
  navigate = true
  syntax-theme = tokyonight_moon

[diff]
  colorMoved = default

[include]
  path = ~/.local/share/nvim/lazy/tokyonight.nvim/extras/delta/tokyonight_moon.gitconfig

[init]
  defaultBranch = main

[interactive]
  diffFilter = delta --color-only

[merge]
  conflictstyle = zdiff3
  tool = diffview

[mergetool]
  keepBackup = false
  prompt = false

[mergetool "diffview"]
  cmd = nvim -n -c "DiffviewOpen" "$MERGE"

[pull]
  rebase = true

