[init]
  defaultBranch = main

[core]
  pager = delta -s
  editor = nvim

[interactive]
  diffFilter = delta --color-only

[add.interactive]
  useBuiltin = false

[delta]
  navigate = true
  light = false
  line-numbers = true
  syntax-theme = OneHalfDark

[merge]
  conflictstyle = diff3

[diff]
  colorMoved = default

[pull]
  rebase = true
