{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": false,
  "enabled_providers": [
    "openai",
    "opencode"
  ],
  "formatter": false,
  "lsp": false,
  "model": "openai/gpt-5.2",
  "permission": {
    "bash": {
      "*": "ask",
      "cat *": "allow",
      "file *": "allow",
      "git diff *": "allow",
      "git log *": "allow",
      "git show *": "allow",
      "git status *": "allow",
      "grep *": "allow",
      "head *": "allow",
      "ls *": "allow",
      "pwd *": "allow",
      "rg *": "allow",
      "tail *": "allow",
      "tree *": "allow",
      "wc *": "allow"
    }
  },
  "provider": {
    "openai": {
      "options": {
        "apiKey": "{env:OPENCODE_OPENAI_API_KEY}",
        "baseURL": "{env:OPENCODE_OPENAI_BASE_URL}",
      }
    }
  },
  "share": "disabled",
  "small_model": "opencode/gpt-5-nano"
}
