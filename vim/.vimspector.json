{
  "$schema": "http://puremourning.github.io/vimspector/schema/vimspector.schema.json",
  "configurations": {
    "c/cpp/zig": {
      "adapter": "CodeLLDB",
      "filetypes": [
        "c",
        "cpp",
        "zig"
      ],
      "configuration": {
        "request": "launch",
        "program": "${fileBasenameNoExtension}",
        "args": [
          "*${arguments}"
        ],
        "stopOnEntry": false
      },
      "breakpoints": {
        "exception": {
          "cpp_throw": "",
          "cpp_catch": ""
        }
      }
    }
  }
}
